p.tips {
  padding 15px
  text-align center
}

form {
  width 80%
  margin 0 auto
  input[type='url'] {
    display block
    box-sizing border-box
    width 100%
    height 50px
    line-height 50px
    padding 8px
    font-size 14px
    color #333333
    border 1px solid #333333
    outline none
    &:focus {
      border 1px solid #333333
      outline none
    }
  }

  button[type='submit'] {
    display block
    box-sizing border-box
    width 100%
    height 50px
    line-height 50px
    font-size 14px
    text-align center
    color #ffffff
    background-color #4653ff
    margin-top 20px
    border none
    outline none
    &:focus {
      border none
      outline none
    }
  }
}

.result {
  padding 15px
  text-align center
  a[target='_blank'] {
    color #0000ee
  }
}
