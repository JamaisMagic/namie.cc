normalize-css()

html {
  width 100%
  height 100%
}

body {
  width 100%
  height 100%
  font-family Roboto, Roboto-Regular, Tahoma, Arial, 'Droid Sans', 'Helvetica Neue', 'Droid Sans Fallback', 'Heiti SC', 'Hiragino Sans GB', "Microsoft YaHei", Simsun, sans-serif
}

a {
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  tap-highlight-color rgba(0, 0, 0, 0)
  &:focus {
    -webkit-tap-highlight-color rgba(0, 0, 0, 0)
    tap-highlight-color rgba(0, 0, 0, 0)
  }
}

.loading-state {
  background url("/common/imgs/loading_124.gif") center center no-repeat
  background-size 32px 32px
}

.page-loading {
  box-sizing border-box
  position fixed
  width 100%
  height 100%
  left 0
  top 0
  z-index 1000
}

#app {
  box-sizing border-box
  width 100%
  height 100%
  max-width 720px
  margin 0 auto
}

.main-content {
  box-sizing border-box
  width 100%
  overflow hidden
}
